{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "declaration": false,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": [
      "es2020"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./dist",
    "./build"
  ]
}
